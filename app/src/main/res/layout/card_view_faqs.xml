<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:backgroundTint="@color/pastelGreen"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/questiontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/questionImage"
            android:fontFamily="@font/play_bold"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/answertxt"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_below="@+id/questionImage"
            android:layout_alignStart="@+id/questionImage"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/play_regular"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/questionImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_menu_help"></ImageView>


    </RelativeLayout>


</androidx.cardview.widget.CardView>